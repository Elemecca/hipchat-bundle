<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

  <route id="elemecca_hipchat_descriptor"
         path="/descriptor.json" methods="GET">
    <default key="_controller">ElemeccaHipChatBundle:Installation:descriptor</default>
  </route>

  <route id="elemecca_hipchat_install"
         path="/installation" methods="POST">
    <default key="_controller">ElemeccaHipChatBundle:Installation:install</default>
  </route>

  <route id="elemecca_hipchat_remove"
         path="/installation/{id}" methods="DELETE">
    <default key="_controller">ElemeccaHipChatBundle:Installation:remove</default>
  </route>
</routes>